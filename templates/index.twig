                <div class="icon-block">
                  <i class="ion-ios-clock-outline"></i>
                </div>
                <h4>Location and Hours</h4>
                <p>{{ entry.locationAndHours }}</p>
                <a href="/contact" class="btn btn-border-white shutter-both">Store Hours</a>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!--
      end About Section
      ==================================== -->

      <!--
      Start Service Section
      ==================================== -->
      <section id="service" class="section bg-one">
          <div class="container">
              <div class="row">
                  <!-- section title -->
                  <div class="col-sm-12 col-md-12">
                      <div class="sec-head text-left wow fadeIn">
                          <h2>Our Services</h2>
                          <div class="row">
                          <p class="col-md-7">{{ entry.ourServices }}</p>
                          </div>
                      </div>
                  </div>
                  <!-- /section title -->

                  <!-- Service item -->
                  <div class="col-sm-6 col-md-4 wow fadeInUp">
                      <div class="service-item">                            
                          <div class="icon-box text-center">
                              <i class="ion-ios-musical-notes"></i>
                          </div>                  
                          <!-- Express Service Yourself -->
                          <div class="service-text">
                              <h4 class="text-center">Listening Demos</h4>                   
