                  <!-- Service item -->
                  <div class="col-sm-6 col-md-4 wow fadeInUp" data-wow-delay="0.6s">
                      <div class="service-item">
                          <div class="icon-box text-center">
                              <i class="ion-ios-ionic-outline"></i>
                          </div>
                          <!-- Express Service Yourself -->
                          <div class="service-text">
                              <h4 class="text-center">Custom Cables</h4>
                              <p>{{ entry.customCables }}</p>
                          </div>
                      </div>
                  </div> 
                  <!-- End Service item -->

                  <!-- Service item -->
                  <div class="col-sm-6 col-md-4 wow fadeInUp" data-wow-delay="0.9s">
                      <div class="service-item">
                          <div class="icon-box text-center">
                              <i class="ion-ios-barcode-outline"></i>
                          </div>
                          <!-- Express Service Yourself -->
                          <div class="service-text">
                              <h4 class="text-center">Tube Testing</h4>
                              <p>{{ entry.tubeTesting }}</p>
                          </div>
                      </div>
                  </div> 
                  <!-- End Service item -->

              </div>      <!-- End row -->
          </div>      <!-- End container -->
      </section>
      <!--
      end Service Section
      ==================================== -->

      <!--
      Start Team Section
      ==================================== -->
      <section id="team" class="section">
          <div class="container">
              <div class="row">
                  <!-- section title -->
                  <div class="col-sm-12 col-md-12">
                      <div class="sec-head text-left wow fadeIn" >
                          <h2>The Owner &amp; President of Distinctive Audio Inc.</h2>
                          <div class="row">
                          <p class="col-md-7">{{ entry.staffMembers }}</p>
                          </div>
                      </div>
                  </div>
                  <!-- /section title -->

                  <!-- team member -->
                  <div class="col-sm-6 col-md-3 wow fadeInUp">
                    {% for block in entry.staffMemberImage.all() %}
                    {% if block.type == 'staffMemberImage' %}
                      <div class="team-mate">
                          <figure class="member-photo">
                              <!-- member photo -->
                              <img class="img-responsive" src="{{ block.staffMemberImage.one().getUrl() }}" alt="{{ block.staffMemberName }}">
                              <!-- /member photo -->
                          </figure>

                          <!-- member name -->
                          <div class="member-title">
                              <h4>{{ block.staffMemberName }}</h4>
                              <span>{{ block.staffMemberOccupation }}</span>
                          </div>
                          <!-- /member name -->
                     </div>
                    {% endif %}
                    {% endfor %}
                  </div>
                  <!-- // team member -->
              </div>
          </div>
      </section>
      <!--
      end Team Section
      ==================================== -->

      <!--
      call to action
      ==================================== -->
      <section class="section call-to-action">
          <div class="container">
              <div class="cta">
                  <h2>Interested in Learning More About Distinctive Audio?</h2>
                  <div class="btn-set">
                      <a href="/contact" class="btn btn-contact">Get in Touch</a>
                  </div>
              </div>
          </div>
      </section>
      <!--
      end call to action
      ==================================== -->

    </main>
    <!-- // #main -->
  </div>
