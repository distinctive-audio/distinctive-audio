{% extends "_layouts/main" %}
{% block main %}

{% for home in craft.entries.section('home').all() %}
<div id="content" class="site-content">
  <div id="primary" class="content-area">
    <main id="main" class="site-main" role="main">
      <!-- Home Slider -->
      <section id="start">
        <!-- slide item -->
        <div class="banner-home" style="background-image:url({{ home.bannerImage.one().getUrl() }})">
            <div class="slide-content container">
                <div class="inner-content home-header text-">
                    <h1>Welcome to Distinctive Audio</h1>
                    <h3 class="established">â€“ Established in 1986</h3>
                    <h4>We help you achieve a superior music listening experience by providing a range of high quality audio <br class="hidden-xs"> components and accessories. Our products allow listeners to engage with their music at a refined level.</h4>
                    <div class="btn-set">
                        <span class="btn1">
                            <a href="/da-inventory-sale" class="btn btn-shadow btn-main shutter-both">Products on Sale</a>
                        </span>
                        <span class="btn2">
                            <a href="/contact" class="btn btn-shadow btn-dark shutter-both">Contact Us</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!-- // slide item -->
      </section>
      <!-- // Home Slider -->

      <!--
      Start About Section
      ==================================== -->
      <section id="about" class="section">
        <div class="container">
          <div class="row">
            <!-- section title -->
            <div class="col-xs-12 col-sm-8 margin-bottom">
              <h3 class="margin-bottom"><a href="/da-inventory-sale">Inventory Items Currently on Sale</a></h3>
              <p>{{ entry.announcements }}</p>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 col-sm-6 wow fadeInLeft">
              <div class="about-block">
                <div class="icon-block">
                  <i class="ion-ios-paperplane-outline"></i>
                </div>
                <h4>New Arrivals</h4>
                <p>{{ entry.newArrivals }}</p>
                <a href="/new-arrivals" class="btn btn-border-white shutter-both">New Arrivals</a>
              </div>
            </div>

